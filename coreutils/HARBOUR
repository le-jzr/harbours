shipname=coreutils
shipversion=8.29
mirror_="https://ftp.gnu.org/gnu/coreutils/"
shipsources="$mirror_/$shipname-$shipversion.tar.xz"
shiptugs=""
shipfunnels=4


build() {
	run tar xJf ${shipname}-${shipversion}.tar.xz
	cd ${shipname}-${shipversion}
	cp "$HSCT_CONFIG_SUB" build-aux/

	HSCT_CFLAGS="$HSCT_CFLAGS -DSLOW_BUT_NO_HACKS"

	run ./configure \
		--disable-nls \
		$HSCT_CONFIGURE_ARGS

	run make -j$shipfunnels
}

package() {
	cd ${shipname}-${shipversion}

	run make install "DESTDIR=$PWD/PKG"

	run mkdir -p "$HSCT_MY_DIR/app/"
	for app in PKG/usr/local/bin/*; do
		run cp PKG/usr/local/bin/$app "$HSCT_MY_DIR/app/"
	done
}
